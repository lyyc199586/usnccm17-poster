% Basic colors
\setbeamercolor{palette primary}{fg=black,bg=white}
\setbeamercolor{palette secondary}{fg=black,bg=white}
\setbeamercolor{palette tertiary}{bg=black,fg=white}
\setbeamercolor{palette quaternary}{fg=black,bg=white}
\setbeamercolor{structure}{fg=dukeroyal}

% Headline
\setbeamercolor{headline}{bg=white,fg=dukenavy}

% Block
\setbeamercolor{block title}{bg=dukenavy,fg=white}
\setbeamercolor{block separator}{bg=white}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=dukeroyal,bg=glassgrey}
\setbeamercolor{block alerted separator}{bg=black}
\setbeamercolor{block alerted body}{fg=black,bg=glassgrey}

% Example Block
\setbeamercolor{block example title}{fg=dukeroyal,bg=glassgrey}
\setbeamercolor{block example separator}{bg=black}
\setbeamercolor{block example body}{fg=black,bg=glassgrey}

% Heading
\setbeamercolor{heading}{fg=black}

% Itemize
\setbeamercolor{item}{fg=dukeroyal}

% Bibliography
